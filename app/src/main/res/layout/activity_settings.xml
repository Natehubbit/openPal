    <RelativeLayout
        android:id="@+id/set_profile_image1"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp">
        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/set_profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/imgplaceholder"
            android:scaleType="centerCrop"
            app:strokeColor="@color/colorAccent"
            app:strokeWidth="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_add_a_photo_black_24dp"
                android:background="@android:color/transparent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upp"
        android:layout_below="@+id/set_profile_image1"
        android:orientation="horizontal"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:weightSum="2"
        android:layout_marginTop="10dp">
    <EditText
        android:id="@+id/set_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_profile_image"
        android:inputType="textMultiLine"
        android:hint="username"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:padding="6dp"
        android:background="@android:color/transparent"
        android:layout_weight="1.9"/>
        <ImageButton
            android:id="@+id/icon100"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/up_up"
        android:layout_below="@+id/upp"
        android:orientation="horizontal"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:weightSum="2"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/set_profile_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:hint="Hello, there!"
            android:textAlignment="center"
            android:padding="6dp"
            android:background="@android:color/transparent"
            android:layout_weight="1.9"/>
        <ImageButton
            android:id="@+id/icon101"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="10dp" />
        <ImageButton
            android:id="@+id/update_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_rounded"
            android:src="@drawable/ic_arrowrightsvg"
            android:padding="20dp"
            android:elevation="20dp"/>
    </LinearLayout>

